# ================================
# CONFIGURAÇÕES DO BOT DE ROBUX
# ================================

# Discord Bot Token
DISCORD_TOKEN=seu_token_do_discord_aqui
DISCORD_GUILD_ID=seu_guild_id_aqui

# IDs de Canais
CHANNEL_VENDAS_ID=id_do_canal_de_vendas
CHANNEL_LOGS_ID=id_do_canal_de_logs
CHANNEL_PEDIDOS_ID=id_do_canal_de_pedidos

# IDs de Cargos
ROLE_ADMIN_ID=id_do_cargo_admin
ROLE_CLIENTE_ID=id_do_cargo_cliente
ROLE_VIP_ID=id_do_cargo_vip

# Categoria para Tickets
CATEGORY_TICKETS_ID=id_da_categoria_tickets

# ================================
# POSTGRESQL DATABASE
# ================================
DATABASE_URL=postgresql+asyncpg://usuario:senha@host:porta/banco

# SSL (opcional - descomente se necessário)
# PGSSLROOTCERT=certs/ca-certificate.crt
# PGSSLCERT=certs/certificate.pem
# PGSSLKEY=certs/private-key.key

# ================================
# MERCADO PAGO (PIX)
# ================================
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_mercado_pago
MERCADOPAGO_WEBHOOK_SECRET=seu_webhook_secret

# ================================
# ROBLOX API
# ================================
ROBLOX_COOKIE=seu_cookie_roblox
ROBLOX_USER_ID=seu_user_id_roblox
ROBLOX_UNIVERSE_ID=seu_universe_id

# ================================
# CONFIGURAÇÕES DE PREÇO
# ================================
# Preço por 1000 Robux em centavos (R$)
PRICE_PER_1000_ROBUX=1500
# Taxa do Roblox (30%)
ROBLOX_TAX_RATE=0.30
# Valor mínimo de compra em Robux
MIN_ROBUX_AMOUNT=100
# Valor máximo de compra em Robux
MAX_ROBUX_AMOUNT=100000

# ================================
# CONFIGURAÇÕES GERAIS
# ================================
# Tempo de expiração do PIX em minutos
PIX_EXPIRATION_MINUTES=30
# Tempo de expiração do ticket em horas
TICKET_EXPIRATION_HOURS=24
# Modo debug
DEBUG=false
